{
  "name": "ezreport",
  "version": "1.0.0",
  "description": "Sprint report automation: CLI + Web Console",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @ezreport/web",
    "dev:cli": "npm run dev -w @ezreport/cli",
    "build": "npm run build -w @ezreport/cli && npm run build -w @ezreport/web",
    "build:cli": "npm run build -w @ezreport/cli",
    "build:web": "npm run build -w @ezreport/web",
    "sprint-report": "npm run sprint-report -w @ezreport/cli",
    "sprint-report:test": "npm run sprint-report:test -w @ezreport/cli",
    "test:connections": "npm run test:connections -w @ezreport/cli",
    "lint": "npm run lint -w @ezreport/web",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolaysha/ezreport.git"
  },
  "keywords": [
    "sprint",
    "report",
    "jira",
    "notion",
    "openai",
    "cli",
    "web",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
