{
  "name": "ezreport",
  "version": "1.0.0",
  "description": "CLI tool for generating sprint reports in Notion from Jira data using AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "sprint-report": "ts-node src/index.ts",
    "sprint-report:test": "NODE_ENV=test MOCK_MODE=false ts-node src/index.ts --sprint=\"Sprint 4\" --test",
    "test:connections": "MOCK_MODE=false ts-node src/tests/connections/index.ts",
    "test:jira": "MOCK_MODE=false ts-node src/tests/connections/index.ts --jira",
    "test:notion": "MOCK_MODE=false ts-node src/tests/connections/index.ts --notion",
    "test:openai": "MOCK_MODE=false ts-node src/tests/connections/index.ts --openai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolaysha/ezreport.git"
  },
  "keywords": [
    "sprint",
    "report",
    "jira",
    "notion",
    "openai",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolaysha/ezreport/issues"
  },
  "homepage": "https://github.com/tolaysha/ezreport#readme",
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
